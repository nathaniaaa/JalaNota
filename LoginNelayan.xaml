<Window x:Class="JalaNota.LoginNelayan"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JalaNota"
        mc:Ignorable="d"
        Title="LoginNelayan" Height="450" Width="800"
        Background="#F7FBFF" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Border HorizontalAlignment="Left"
        VerticalAlignment="Center"
        Width="309"
        Height="394"
        CornerRadius="15">
            <Border.Background>
                <ImageBrush ImageSource="/martin-katler-vQSIR1EPTTU-unsplash.jpg" Stretch="Fill"/>
            </Border.Background>
        </Border>
        <Image HorizontalAlignment="Left" Height="107" Margin="16,150,0,0" VerticalAlignment="Top" Width="277" Source="/Logo Jala Nota.png"/>
        <TextBlock Text="Selamat Datang di JalaNota!"
            FontSize="22" FontWeight="Bold"
            Foreground="#1E3A5F"
    Margin="359,46,103,318"/>
        <TextBlock Text="Login ke akun anda"
            FontSize="12" 
            Foreground="#1E3A5F"
            Margin="359,76,291,302"/>
        <TextBlock Text="Username"
            FontSize="12" FontWeight="Bold"
            Foreground="#1E3A5F"
            Margin="359,166,291,212"/>
        <Border HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Width="227"
        Height="29"
        Margin="359,187,0,0"
        Background="White"
        BorderBrush="#FFC8C8C8"
        BorderThickness="1"
        CornerRadius="3">

            <TextBox Text="Masukkan username anda"
             Foreground="#FFC8C8C8"
             VerticalContentAlignment="Center"
                     Margin="10,0,0,0"
             TextWrapping="Wrap"
             Background="Transparent"
             BorderThickness="0"/>
        </Border>
        <TextBlock Text="Password"
            FontSize="12" FontWeight="Bold"
            Foreground="#1E3A5F"
            Margin="359,226,291,152"/>
        <Border HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Width="227"
            Height="29"
            Margin="359,247,0,0"
            Background="White"
            BorderBrush="#FFC8C8C8"
            BorderThickness="1"
            CornerRadius="3">

            <TextBox Text="Masukkan sandi anda"
                Foreground="#FFC8C8C8"
                VerticalContentAlignment="Center"
                Margin="10,0,0,0"
                TextWrapping="Wrap"
                Background="Transparent"
                BorderThickness="0"/>
        </Border>
        <Button x:Name="LoginBtn" 
            Content="Login"
            FontSize="16"
            Background="#FF52B0D8"
            Foreground="White"
            BorderBrush="#1E3A5F"
            BorderThickness="0"
            Padding="4"
            Cursor="Hand"
            Click="Login_Click"
    Margin="359,288,307,70">

            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="4"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="LoginBtn_Copy" 
            Content="Login Nelayan"
            FontSize="16"
            Background="#2C7DA0"
            Foreground="White"
            BorderBrush="#1E3A5F"
            BorderThickness="0"
            Padding="4"
            Cursor="Hand"
            Click="Login_Click"
            Margin="359,111,259,243">

            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="LoginBtn_Copy1" 
            Content="Login Admin"
            FontSize="16"
            Background="#FFF7FBFF"
            Foreground="#2C7DA0"
            BorderBrush="#2C7DA0"
            BorderThickness="2"
            Padding="4"
            Cursor="Hand"
            Click="Login_Click"
            Margin="510,111,109,243">

            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </Button.Resources>
        </Button>

    </Grid>
</Window>
