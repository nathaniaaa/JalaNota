<Window x:Class="JalaNota.LihatSetoranNelayan"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JalaNota"
        mc:Ignorable="d"
        Title="LihatSetoranNelayan" Height="450" Width="800"
        Background="#F7FBFF" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="RightAlignStyle" TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="Padding" Value="0,0,8,0"/>
        </Style>

        <Style x:Key="NavActionStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#D9534F"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FADBD8"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">

        <Border Background="#D2E9F4" 
            CornerRadius="8" 
            Padding="10" 
            Margin="0,0,0,10"
            VerticalAlignment="Top" 
            Height="60">

            <DockPanel>
                <TextBlock x:Name="textBlockWelcome"
                       FontSize="22" FontWeight="Bold"
                       Foreground="#1E3A5F"
                       DockPanel.Dock="Left"
                       VerticalAlignment="Center"/>
                <Button Grid.Column="1" 
                            Content="Logout"
                            Style="{StaticResource NavActionStyle}" 
                            Click="Logout_Click"
                            VerticalAlignment="Center"
                            DockPanel.Dock="Right" HorizontalAlignment="Right">
                </Button>
            </DockPanel>
        </Border>

        <StackPanel Margin="0,80,0,0">
            <TextBlock Text="Riwayat Setoran Anda" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Margin="0,0,0,10"/>

            <DataGrid x:Name="dataGridSetoranNelayan"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  Height="350">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID Setoran" Binding="{Binding IDSetoran}" Width="100"/>
                    <DataGridTextColumn Header="Tanggal" Binding="{Binding WaktuSetor}" Width="100"/>
                    <DataGridTextColumn Header="Nama Ikan" Binding="{Binding NamaIkan}" Width="*"/>
                    <DataGridTextColumn Header="Berat (kg)" Binding="{Binding BeratKg}" Width="120"/>
                    <DataGridTextColumn Header="Total Harga" Binding="{Binding HargaTotal}" Width="150"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>
